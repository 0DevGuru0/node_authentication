<link href="/css/forgot.css" rel="stylesheet"/>
<header>
  <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <a class="navbar-brand" href="#"><img src="/images/logo.png" width="50px"/></a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarCollapse">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/edit">LogIn</a>
        </li>
      </ul>
      <form class="form-inline mt-2 mt-md-0">
        <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
      </form>
    </div>
  </nav>
</header>
{{#if error_msg}}
<div class="alert alert-danger" style="margin-top:5pc;" role="alert">
  {{error_msg}}
</div>
{{/if}}
{{#if success_msg}}
<div class="alert alert-success" style="margin-top:5pc;" role="alert">
  {{success_msg}}
</div>
{{/if}}
<div class="main">
  <div>
    <img style="display: block;margin: auto;" src="images/forgotpassword.png"/>
  </div>
  <div style="margin-top: 6pc;">
    <h1 style="margin-top:7pc;">
    <strong>Forgot your password?</strong>
    </h1>
    <hr style="width:80%;margin-left:0px;">
    <form method="post" action="/users/forgot" class="form">
      <div class="form-group mb-2" style="margin-left:2pc;">
        <label style="margin-right:10px;">What's your email? </label>
        <input type="email" class="form-control" name="email" id="staticEmail2" style="width: 25pc;" placeholder="email@example.com">
      </div>
      <button type="submit" class="btn btn-primary mb-2" style="margin-left:2pc;">Confirm identity</button>
    </form>
  <div>
</div>